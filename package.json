{
	"name": "ultimate-nest-template",
	"version": "1.2.0",
	"description": "NestJS + MikroORM realworld API example",
	"license": "MIT",
	"repository": "https://github.com/rubiin/ultimate-nest",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"start:frontend": "cd frontend && yarn dev",
		"lint": "eslint '{src,test}/**/*.ts' --cache --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "echo 'No e2e tests implemented yet.'"
	},
	"dependencies": {
		"@golevelup/nestjs-modules": "^0.5.0",
		"@nestjs/axios": "^0.0.7",
		"@nestjs/common": "8.4.4",
		"@nestjs/config": "^2.0.0",
		"@nestjs/core": "8.4.5",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/mongoose": "^9.0.3",
		"@nestjs/passport": "^8.2.1",
		"@nestjs/platform-express": "^8.4.5",
		"@nestjs/serve-static": "^2.2.2",
		"@nestjs/swagger": "^5.2.1",
		"@rubiin/js-utils": "^2.1.8",
		"bcrypt": "^5.0.1",
		"cache-manager": "^3.6.0",
		"cache-manager-redis-store": "^2.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"compression": "^1.7.4",
		"csurf": "^1.11.0",
		"date-fns": "^2.28.0",
		"dotenv": "^16.0.0",
		"eta": "^1.12.3",
		"firebase-admin": "^10.1.0",
		"helmet": "^5.0.2",
		"joi": "^17.6.0",
		"mongoose": "^6.3.2",
		"mongoose-aggregate-paginate-v2": "^1.0.6",
		"mongoose-delete": "^0.5.4",
		"nanoid": "^3.3.3",
		"nestjs-i18n": "^9.0.4",
		"nestjs-minio": "^2.1.15",
		"nestjs-pino": "^2.5.2",
		"nodemailer": "^6.7.3",
		"passport": "0.5.2",
		"passport-jwt": "4.0.0",
		"pino-http": "^7.0.0",
		"pino-pretty": "^7.6.1",
		"piscina": "^3.2.0",
		"preview-email": "^3.0.5",
		"reflect-metadata": "0.1.13",
		"rxjs": "^7.5.5",
		"sharp": "^0.30.4",
		"swagger-ui-express": "^4.3.0",
		"twilio": "^3.77.0",
		"type-fest": "^2.12.2"
	},
	"devDependencies": {
		"@firebase/app-compat": "0.x",
		"@firebase/app-types": "0.x",
		"@nestjs/cli": "8.2.5",
		"@nestjs/schematics": "8.0.11",
		"@nestjs/testing": "8.4.3",
		"@types/cache-manager": "^3.4.3",
		"@types/cache-manager-redis-store": "^2.0.1",
		"@types/compression": "^1.7.2",
		"@types/csurf": "^1.11.2",
		"@types/dotenv": "^8.2.0",
		"@types/helmet": "^4.0.0",
		"@types/hpp": "^0.2.2",
		"@types/jest": "^27.5.0",
		"@types/joi": "^17.2.3",
		"@types/multer": "^1.4.7",
		"@types/nanoid": "^3.0.0",
		"@types/node": "^17.0.33",
		"@types/nodemailer": "^6.4.4",
		"@types/passport": "^1.0.7",
		"@types/passport-jwt": "^3.0.6",
		"@types/puppeteer": "^5.4.6",
		"@types/qs": "6.9.7",
		"@types/reflect-metadata": "^0.1.0",
		"@types/sharp": "^0.30.2",
		"@types/supertest": "2.0.12",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/twilio": "^3.19.3",
		"@types/winston": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.21.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "2.25.4",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-unicorn": "^42.0.0",
		"express": "^4.18.1",
		"husky": "^8.0.1",
		"jest": "28.0.3",
		"lint-staged": "^12.4.0",
		"prettier": "^2.6.2",
		"run-script-webpack-plugin": "^0.0.11",
		"supertest": "6.2.2",
		"ts-jest": "28.0.2",
		"ts-loader": "9.3.0",
		"ts-node": "10.7.0",
		"tsconfig-paths": "3.14.1",
		"typescript": "^4.6.4",
		"webpack": "^5.72.0",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"^@utils/(.*)$": "<rootDir>/utils/$1",
			"^@common/(.*)$": "<rootDir>/common/$1",
			"^@modules/(.*)$": "<rootDir>/modules/$1",
			"^@config/(.*)$": "<rootDir>/config/$1",
			"^@entities/(.*)$": "<rootDir>/entities/$1",
			"^@models/(.*)$": "<rootDir>/models/$1",
			"^@dtos/(.*)$": "<rootDir>/dtos/$1"
		},
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"coverageReporters": [
			"text",
			"html"
		]
	},
	"engines": {
		"node": ">=14"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write"
		],
		"*.{json,md,scss,yaml,yml}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
